<div class = "post">

  <strong><%= t("post.title") %>:</strong>
  <br>
  <p class="title">
    <%= @post.title %>
  </p>


  <strong><%= t("post.text") %>:</strong>
  <br>

  <p><%= @post.text %></p>


  <strong>  <%=t("post.user") << ": " << @post.user.email %> </strong>

  <br>

  <div class = "controls">
    <br>
    <% if current_user == @post.user %>
      <%= link_to t("post.edit"), edit_post_path(@post), class: "cool" %>
      <%= link_to t("post.destroy"), @post, class: "cool", method: :delete, data: { confirm: t("post.index.confirm") } %>
      <%= content_tag :br %>
    <% end %>
    <br>
    <%= link_to t("post.back"), posts_path, class: "cool" %>
    <br>
  </div>
</div>

<%= render "comments/show"%>

<div class="commentControls">

  <%= link_to t("comments.showAll"), post_comments_path(@post), class: "cool" %>
  <%= content_tag :h2, "|" %>
  <%= link_to t("comments.new"), new_post_comment_path(@post), class: "cool" %>

</div>
