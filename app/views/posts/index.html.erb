<h1><%= t("post.index.posts") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("post.title") %></th>
      <th><%= t("post.text") %></th>
      <th><%= t("post.user") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%=link_to post.title, post %></td>
        <td><%= post.text %></td>
        <td><%= post.user.email %></td>
        <!-- <td><%= link_to t("post.show"), post %></td> -->
        <% if post.user == current_user%>
          <%= content_tag :td, ( link_to t("post.edit"), edit_post_path(post) )%>
          <%= content_tag :td, ( link_to t("post.destroy"), post, method: :delete, data: { confirm: t("post.index.confirm") } )%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("post.index.newpost"), new_post_path %>
